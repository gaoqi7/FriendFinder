<h1>Survey question</h1>
<form id="userInfo">
    <div class="form-group">
        <label for="exampleInputEmail1">Name(Required)</label>
        <input type="text" class="form-control" name="name" placeholder="Your Full Name">
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Link to Photo Image (Required)</label>
        <input type="text" class="form-control" name="photo" placeholder="Image Link">
    </div>
</form>
{{#each survey}}
<div>
    <h4>
        Question:{{num}}
    </h4>
    <div>
        <p>
            {{question}}
        </p>
        <form class="text-right form-group">

            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="inlineRadioOptions" value="1">
                <label class="form-check-label" for="inlineRadio1">1</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="inlineRadioOptions" value="2">
                <label class="form-check-label" for="inlineRadio2">2</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="inlineRadioOptions" value="3">
                <label class="form-check-label" for="inlineRadio3">3</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="inlineRadioOptions" value="4">
                <label class="form-check-label" for="inlineRadio4">4</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="inlineRadioOptions" value="5">
                <label class="form-check-label" for="inlineRadio5">5</label>
            </div>
        </form>
    </div>
    <hr>
</div>
{{/each}}

<div class="text-right">
    <button id="submitBtn" type="button" class="btn btn-primary">Submit</button>
</div>
<a id="apiLink" href="/api/friends">API Friend List</a><span> | </span>
